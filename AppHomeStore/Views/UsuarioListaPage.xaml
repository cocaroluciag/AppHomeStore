<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppHomeStore.ViewModels"
             x:Class="AppHomeStore.Views.UsuarioListaPage">

    <ContentPage.BindingContext>
        <vm:UsuarioListaViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">

        <Label Text="Nombre de Usuario" FontAttributes="Bold" />
        <Entry Text="{Binding NombreUsuario}" Placeholder="Ingrese nombre de usuario" />

        <Label Text="Correo Electrónico" FontAttributes="Bold" />
        <Entry Text="{Binding Correo}" Placeholder="Ingrese correo" Keyboard="Email" />

        <Label Text="Número Telefónico" FontAttributes="Bold" />
        <Entry Text="{Binding NumeroTelefonico}" Placeholder="Ingrese número telefónico" Keyboard="Telephone" />

        <Label Text="Número de Documento" FontAttributes="Bold" />
        <Entry Text="{Binding NroDocumento}" Placeholder="Ingrese número de documento" />

        <!-- Botón de Guardar (sólo como ejemplo, acción aún no implementada) -->
        <Button Text="Guardar" Command="{Binding GuardarCommand}" />

    </StackLayout>
</ContentPage>
